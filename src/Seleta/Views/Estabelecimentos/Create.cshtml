@model Seleta.Models.Estabelecimento

@{
    ViewData["Title"] = "Create";
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<head>
    <title> Cadastro de Estabelecimento</title>
    <link rel="icon" type="image/x-icon"  href="~/css/img/Seleta.png">
   
</head>
<body>
    <header>
        <nav class="navbar-perfil navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="menu-principal navbar-collapse collapse d-sm-inline-flex justify-content-between container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"></a>
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <img src="~/css/img/Seleta.png" alt="Logo" style="position: relative; width: 45px; height: 45px; top: 2%; left: 7%;">
                    </li>
                </ul>
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Home" asp-action="Index" style="left: 10%">HOME</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    
    <div class="mb-3" style="position: absolute; width: 100%; height: 100%; top: 0; left: 0; background-color: #606C38">
        <div class="mb-3">

            <h1 style="color: #FEFAE0;padding-top: 5%; margin-left: 2%">Cadastro de Estabelecimento</h1>

            <hr />
            <div class="row" style="color: #FEFAE0">

                <div class="col-md-4">

                    <form asp-action="Create" style="margin-left: 7%">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Cnpj" class="control-label"></label>
                            <input asp-for="Cnpj" class="form-control" style="background-color: #FEFAE0;" />
                            <span asp-validation-for="Cnpj" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" style="background-color: #FEFAE0;" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Endereco" class="control-label"></label>
                            <input asp-for="Endereco" class="form-control" style="background-color: #FEFAE0;" />
                            <span asp-validation-for="Endereco" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Contato" class="control-label"></label>
                            <input asp-for="Contato" class="form-control" style="background-color: #FEFAE0;" />
                            <span asp-validation-for="Contato" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UsuarioCPF" class="control-label"></label>
                            <select asp-for="UsuarioCPF" class="form-control" style="background-color: #FEFAE0;" asp-items="ViewBag.UsuarioCPF"></select>
                        </div>
                        <br />
                        <div class="form-group">

                            <a asp-action="Index" class="btn" style="width:30%;color: #FFFFFF;background-color: #283618; border-radius: 10px; border-color:#FFFFFF;">
                                Voltar</a>
                            <input type="submit" value="Salvar" class="btn" style="width:30%;color: #FFFFFF;background-color: #DDA15E; border-radius: 10px; border-color:#FFFFFF" />
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="mb-3" style=" width: 100%; height: 100px; background-color: #606C38; padding: 0">
            <img src="~/css/img/SeletaEstabelecimento.jpg" style=" max-width: 100%; heigt: 10%" alt="Imagem" >
        </div>

        <div class="mb-3" style="max-width: 40%; height: 40%; padding: 3%">
            <h4 style="color: #283618; object-fit: cover; position: relative; top: 10px; left: 10px; font-size: 30px;">Amplie sua presença online e alcance mais clientes.</h4>
        </div>
    </div>

    <footer class="footer-home mb-3" background-color: #DDA15E>
        <h3>SIGA-NOS NAS REDES SOCIAIS</h3>
        <h4>ENTRE EM CONTATO</h4>
        <img src="~/css/img/facebook.png" alt="facebook" style="position: relative; width: 30px; height: 33.06px; top: 5%; left: 5%;">
        <img src="~/css/img/instagram.png" alt="instagram" style="position: relative; width: 35px; height: 35px; top: 5%; left: 7%;">
        <p> &copy; 2023 - Seleta - Idiomas - Política de Privacidade - Ajuda</p>
    </footer>
</body>
