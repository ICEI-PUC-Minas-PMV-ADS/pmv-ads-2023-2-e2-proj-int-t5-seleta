@model Seleta.Models.Estabelecimento

@{
    ViewData["Title"] = "Cadastrar estabelecimento";
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<head>
    <title> Cadastro de Estabelecimento</title>
    <link rel="icon" type="image/x-icon" href="~/css/img/Seleta.png">

</head>
<body style="background-color: #FEFAE0">
    <section class="details_usuario">
        <div class="titulo_informacao-usuario">
            <h3>Cadastro de Estabelecimento</h3>
            <hr />
        </div>
        <div class="w-50">
            <form asp-action="Create" style="margin-left: 20px">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UsuarioCPF" />
                <div class="form-group">
                    <label asp-for="Cnpj" class="control-label"></label>
                    <input asp-for="Cnpj" class="form-control" style="background-color: #D9D9D980; border: 1px solid #283618;" />
                    <span asp-validation-for="Cnpj" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" style="background-color: #D9D9D980; border: 1px solid #283618;" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Endereco" class="control-label"></label>
                    <input asp-for="Endereco" class="form-control" style="background-color: #D9D9D980; border: 1px solid #283618;" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contato" class="control-label"></label>
                    <input asp-for="Contato" class="form-control" style="background-color: #D9D9D980; border: 1px solid #283618;" />
                    <span asp-validation-for="Contato" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <a asp-controller="Usuario" asp-action="Perfil" class="btn btn-dark btn-lg btn-block border-0 botoes_perfil-usuario">
                        Voltar
                    </a>
                    <input type="submit" value="Cadastrar" class="btn btn-primary btn-lg btn-block border-0 botoes_perfil-usuario"/>
                </div>
            </form>
        </div>
    </section>

    <section class="perfil_usuario-logo">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h3 class="texto_logo">Amplie sua presença online e alcance mais clientes.</h3>
                </div>
            </div>
        </div>
    </section>
</body>
<footer class="footer_ajustes" style="background-color: #283618; height:200px">
    <div class="container">
        <div class="row">
            <div class="col">
                <h3 class="titulo_footer">SIGA-NOS NAS REDES SOCIAIS</h3>
            </div>
            <div>
                <img class="mx-3" src="~/css/img/facebook.png" alt="facebook">
                <img class="mx-3" src="~/css/img/instagram.png" alt="instagram">
            </div>
        </div>
    </div>
    <div>
        <p class="rodape_footer"> © 2023 - Seleta - Idiomas - Política de Privacidade - Ajuda</p>
    </div>
</footer>
