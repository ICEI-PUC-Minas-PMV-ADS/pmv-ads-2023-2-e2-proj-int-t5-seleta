@model Seleta.Models.Estabelecimento

@{
    ViewData["Title"] = "Remover";
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<head>
    <title> Remover Estabelecimento</title>
    <link rel="icon" type="image/x-icon" href="~/css/img/Seleta.png">

</head>

<header>
    <nav class="navbar-perfil navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
        <div class="menu-principal navbar-collapse collapse d-sm-inline-flex justify-content-between container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/css/img/Seleta.png" class="logo" alt="Logo Seleta"></a>
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Home" asp-action="Index" style="position: relative; left: 55%;">HOME</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a asp-controller="Usuario" asp-action="Perfil" class="nav-link text-center" style="background-color:transparent; color: #283618; border: 1px solid #283618; font-size: 16px; font-weight: bold;
                    position: absolute; width:80px; height: 30px; top: 15%; left:85%; border-radius: 5px; padding:2px;">
                            Perfil
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Usuario" asp-action="Logout" class="nav-link text-white text-center" style="background-color: #283618; border: 1px solid #283618; font-size: 16px; position: absolute;
                            width: 80px; height: 30px; top: 15%; left: 92%; border-radius: 5px; padding:1px;">
                            Sair
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a asp-controller="Usuario" asp-action="Login" class="nav-link text-white text-center" style="background-color: #283618; border: 1px solid #283618; font-size: 16px; position: absolute;
                            width: 80px; height: 30px; top: 15%; left: 92%; border-radius: 5px; padding:1px;">
                            Login
                        </a>
                    </li>
                }
            </ul>
        </div>


        <div class="mobile-menu-icon">
            <button onclick="menuShow()"><img class="icon" src="~/css/img/menu_white_36dp.svg"></button>
        </div>
    </nav>

    <div class="mobile-menu">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
            </li>
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item">
                    <a asp-controller="Usuario" asp-action="Perfil" class="nav-link text-dark">
                        Perfil
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Usuario" asp-action="Logout" class="nav-link text-dark">
                        Sair
                    </a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a asp-controller="Usuario" asp-action="Login" class="nav-link text-dark">
                        Login
                    </a>
                </li>
            }
        </ul>
    </div>
</header>

<body>
    <div class="mb-3" style="position: absolute; width: 100%; height: 100%; top: 0; left: 0; background-color: #606C38">
        <div class="mb-3">

            <h1 style="color: #FEFAE0;padding-top: 5%; margin-left: 2%">Remover Estabelecimento</h1>
            <hr / style="position: relative; width: 520px; left: 2%; color: #FEFAE0;">

            <div class="row" style="color: #FEFAE0">

                <h3 style="margin-left: 2%; color: #283618">Você tem certeza que deseja excluir este item?</h3>
                <br />

                <dl class="row" style="margin-left: 2%">

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Endereco)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Endereco)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Contato)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Contato)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Cnpj" />
                    <a asp-action="Index" class="btn" style="width: 10%; color: #FFFFFF; background-color: #283618; border-radius: 10px; margin-left: 2%;">
                        Voltar
                    </a>
                    <input type="submit" value="Excluir" class="btn" style="width:10%;color: #FFFFFF;background-color: #8F0a2a; border-radius: 10px;" />

                </form>
            </div>
            <br />
        </div>
    </div>
</body>

<footer class="footer-estabelecimento">
    <div class="imagem-footer">
        <h3>Amplie sua presença online e alcance mais clientes.</h3>
        <img src="~/css/img/refeicoes-de-comida-brasileira-simples-com-copia-espaco 2.png" alt="img">
    </div>
