@model Seleta.Models.Estabelecimento

@{
    ViewData["Title"] = "Delete";
}


<header>
    <nav class="navbar-perfil navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
        <div class="menu-principal navbar-collapse collapse d-sm-inline-flex justify-content-between container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/css/img/Seleta.png" class="logo" alt="Logo Seleta"></a>
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Home" asp-action="Index" style="position: relative; left: 55%;">HOME</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a asp-controller="Usuario" asp-action="Perfil" class="nav-link text-center" style="background-color:transparent; color: #283618; border: 1px solid #283618; font-size: 16px; font-weight: bold;
                    position: absolute; width:80px; height: 30px; top: 15%; left:85%; border-radius: 5px; padding:2px;">
                            Perfil
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Usuario" asp-action="Logout" class="nav-link text-white text-center" style="background-color: #283618; border: 1px solid #283618; font-size: 16px; position: absolute;
                            width: 80px; height: 30px; top: 15%; left: 92%; border-radius: 5px; padding:1px;">
                            Sair
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a asp-controller="Usuario" asp-action="Login" class="nav-link text-white text-center" style="background-color: #283618; border: 1px solid #283618; font-size: 16px; position: absolute;
                            width: 80px; height: 30px; top: 15%; left: 92%; border-radius: 5px; padding:1px;">
                            Login
                        </a>
                    </li>
                }
            </ul>
        </div>


        <div class="mobile-menu-icon">
            <button onclick="menuShow()"><img class="icon" src="~/css/img/menu_white_36dp.svg"></button>
        </div>
    </nav>

    <div class="mobile-menu">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
            </li>
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item">
                    <a asp-controller="Usuario" asp-action="Perfil" class="nav-link text-dark">
                        Perfil
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Usuario" asp-action="Logout" class="nav-link text-dark">
                        Sair
                    </a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a asp-controller="Usuario" asp-action="Login" class="nav-link text-dark">
                        Login
                    </a>
                </li>
            }
        </ul>
    </div>
</header>

<body style="background-color: #606C38">

    <h1 style="color: #FEFAE0">Remover um Estabelecimento</h1>
    <br />

    <h3>Você tem certeza que deseja excluir este item?</h3>
    <div>
        <br />
        <h4>Estabelecimento</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Endereco)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Endereco)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Contato)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Contato)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Usuario)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Usuario.CPF)
            </dd>
        </dl>
    
        <form asp-action="Delete">
            <input type="hidden" asp-for="Cnpj" />
            <a asp-action="Index" class="btn" style="width:10%;color: #FFFFFF;background-color: #283618; border-radius: 10px; border-color:#FFFFFF;">
                Voltar
            </a>
            <input type="submit" value="Excluir" class="btn" style="width:10%;color: #FFFFFF;background-color: red; border-radius: 10px; border-color:#FFFFFF;" /> 

        </form>
    </div>
    <footer class="footer-home mb-3" background-color: #DDA15E>
        <h3>SIGA-NOS NAS REDES SOCIAIS</h3>
        <h4>ENTRE EM CONTATO</h4>
        <img src="~/css/img/facebook.png" alt="facebook" style="position: relative; width: 30px; height: 33.06px; top: 5%; left: 5%;">
        <img src="~/css/img/instagram.png" alt="instagram" style="position: relative; width: 35px; height: 35px; top: 5%; left: 7%;">
        <p> &copy; 2023 - Seleta - Idiomas - Política de Privacidade - Ajuda</p>
    </footer>
</body>