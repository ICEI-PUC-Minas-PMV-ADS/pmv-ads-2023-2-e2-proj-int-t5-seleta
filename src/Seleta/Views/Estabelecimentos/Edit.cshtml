@model Seleta.Views.Estabelecimentos.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar estabelecimento</h1>

<h4>Estabelecimento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Estabelecimento.Cnpj" />
            <div class="form-group">
                <label asp-for="Estabelecimento.Nome" class="control-label"></label>
                <input asp-for="Estabelecimento.Nome" class="form-control" />
                <span asp-validation-for="Estabelecimento.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estabelecimento.Endereco" class="control-label"></label>
                <input asp-for="Estabelecimento.Endereco" class="form-control" />
                <span asp-validation-for="Estabelecimento.Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estabelecimento.Contato" class="control-label"></label>
                <input asp-for="Estabelecimento.Contato" class="form-control" />
                <span asp-validation-for="Estabelecimento.Contato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a class="btn btn-info" asp-page="./Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
