@model Seleta.Models.Produto

@{
    ViewData["Title"] = "Cadastrar produto";
}

<h1>Cadastro de Produto</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadePeso" class="control-label"></label>
                <input asp-for="QuantidadePeso" class="form-control" />
                <span asp-validation-for="QuantidadePeso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label>
                <select asp-for="Categoria" class="form-control" asp-items="Html.GetEnumSelectList<TipoCategoria>()"></select>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Restricoes" class="control-label"></label>
                <select asp-for="Restricoes" class="form-control" asp-items="Html.GetEnumSelectList<Restricoes>()"></select>
                <span asp-validation-for="Restricoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CnpjEstabelecimento" class="control-label"></label>
                <select asp-for="CnpjEstabelecimento" class ="form-control" asp-items="ViewBag.CnpjEstabelecimento"></select>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-info" >Voltar</a>
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
