@model Seleta.Models.Produto

@{
    ViewData["Title"] = "Cadastrar produto";
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<head>
    <title> Cadastrar Produto</title>
    <link rel="icon" type="image/x-icon" href="~/css/img/Seleta.png">

</head>

<body style="background-color: #FEFAE0">
    <section class="details_usuario">
        <div class="titulo_informacao-usuario">
            <h3>Cadastro de Produto</h3>
            <hr />
        </div>
        <div class="w-50">
                        <form asp-action="Create" enctype="multipart/form-data" style="margin-left: 7%">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" style="background-color: #D9D9D980; border: 1px solid #283618;" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Preco" class="control-label"></label>
                                <input asp-for="Preco" class="form-control" placeholder="0.00" style="background-color: #D9D9D980; border: 1px solid #283618;" />
                                <span asp-validation-for="Preco" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="QuantidadePeso" class="control-label"></label>
                                <input asp-for="QuantidadePeso" class="form-control" placeholder="Informar gramas(g), mililitro (ml) ou unidade(un)" style="background-color: #D9D9D980; border: 1px solid #283618;" />
                                <span asp-validation-for="QuantidadePeso" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Categoria" class="control-label"></label>
                                <select asp-for="Categoria" class="form-control" style="background-color: #D9D9D980; border: 1px solid #283618;" asp-items="Html.GetEnumSelectList<TipoCategoria>()" multiple size="3"></select>
                                <span asp-validation-for="Categoria" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Descricao" class="control-label"></label>
                                <textarea asp-for="Descricao" class="form-control" rows="" style="background-color: #D9D9D980; border: 1px solid #283618;" placeholder="Insira informações relevantes sobre o produto."></textarea>
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                     
                            <div class="form-group">
                                <label asp-for="Restricoes" class="control-label"></label>
                                <select asp-for="Restricoes" class="form-control" style="background-color: #D9D9D980; border: 1px solid #283618;" asp-items="Html.GetEnumSelectList<Restricoes>()" multiple size="5"></select>
                                <span asp-validation-for="Restricoes" class="text-danger"></span>
                            </div>                         
                            <div class="form-group">
                                <label asp-for="CnpjEstabelecimento" class="control-label"></label>
                                <select asp-for="CnpjEstabelecimento" class="form-control" style="background-color: #D9D9D980; border: 1px solid #283618;" asp-items="ViewBag.CnpjEstabelecimento"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Imagem" class="control-label">Imagem do Produto</label>
                                <input asp-for="Imagem" name="imagem" type="file" id="inputImagem" accept="image/*" onchange="previewImage()" class=" form-control" style="background-color: #D9D9D980; border: 1px solid #283618;" />
                                <span asp-validation-for="Imagem" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <img id="preview" alt="Pré-visualização" style="max-width: 100%; max-height: 200px;" />
                            </div>
                            <br />
                            <div class="form-group pb-4">
                    <a asp-action="Index" class="btn btn-dark btn-lg btn-block border-0 botoes_perfil-usuario">
                                    Voltar
                                </a>
                    <input type="submit" value="Cadastrar" class="btn btn-primary btn-lg btn-block border-0 botoes_perfil-usuario" />
                            </div>
                        </form>
        </div>
    </section>

    <section class="perfil_usuario-logo">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h3 class="texto_logo">Amplie sua presença online e alcance mais clientes.</h3>
                </div>
            </div>
        </div>
    </section>
</body>

<footer class="footer_ajustes" style="background-color: #283618; height:200px">
    <div class="container">
        <div class="row">
            <div class="col">
                <h3 class="titulo_footer">SIGA-NOS NAS REDES SOCIAIS</h3>
            </div>
            <div>
                <img class="mx-3" src="~/css/img/facebook.png" alt="facebook">
                <img class="mx-3" src="~/css/img/instagram.png" alt="instagram">
            </div>
        </div>
    </div>
    <div>
        <p class="rodape_footer"> © 2023 - Seleta - Idiomas - Política de Privacidade - Ajuda</p>
    </div>
</footer>

<script>
    function previewImage() {
        var input = document.getElementById('inputImagem');
        var preview = document.getElementById('preview');

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                preview.src = e.target.result;
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
