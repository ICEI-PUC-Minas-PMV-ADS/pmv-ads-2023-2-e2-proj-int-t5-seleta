@model Seleta.Models.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<head>
    <title> Editar Produto</title>
    <link rel="icon" type="image/x-icon" href="~/css/img/Seleta.png">
</head>

<body style="background-color: #FEFAE0">
    <section class="details_usuario">
        <div class="titulo_informacao-usuario">
            <h3>Editar Produto</h3>
            <hr />
        </div>
        <div class="w-50" style="margin-left: 20px">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" style="background-color: #D9D9D980; border: 1px solid #283618;" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Preco" class="control-label"></label>
                    <input asp-for="Preco" class="form-control" style="background-color: #D9D9D980; border: 1px solid #283618;" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QuantidadePeso" class="control-label"></label>
                    <input asp-for="QuantidadePeso" class="form-control" style="background-color: #D9D9D980; border: 1px solid #283618;" />
                    <span asp-validation-for="QuantidadePeso" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Categoria" class="control-label"></label>
                    <select asp-for="Categoria" class="form-control" style="background-color: #D9D9D980; border: 1px solid #283618;" asp-items="Html.GetEnumSelectList<TipoCategoria>()"></select>
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <textarea asp-for="Descricao" class="form-control" rows="" style="background-color: #D9D9D980; border: 1px solid #283618;"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Restricoes" class="control-label"></label>
                    <select asp-for="Restricoes" class="form-control" style="background-color: #D9D9D980; border: 1px solid #283618;" asp-items="Html.GetEnumSelectList<Restricoes>()"></select>
                    <span asp-validation-for="Restricoes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CnpjEstabelecimento" class="control-label"></label>
                    <select asp-for="CnpjEstabelecimento" class="form-control" style="background-color: #D9D9D980; border: 1px solid #283618;" asp-items="ViewBag.CnpjEstabelecimento"></select>
                    <span asp-validation-for="CnpjEstabelecimento" class="text-danger"></span>
                </div>
                <br />
                @if (Model.Imagem != null && Model.Imagem.Length > 0)
                {
                    <div class="form-group row">
                        <label class="mb-2">Imagem Atual</label>
                        <img src="data:image;base64,@Convert.ToBase64String(Model.Imagem)" alt="Imagem Atual" style="max-width: 50%; max-height: 200px;" />
                    </div>
                }
                <br />
                <div class="form-group">
                    <label asp-for="Imagem" class="control-label mb-2" for="inputNovaImagem">Nova Imagem do Produto</label>
                    <input asp-for="Imagem" name="novaImagem" type="file" id="inputNovaImagem" accept="image/*" onchange="previewNovaImagem()" class="form-control" style="background-color: #D9D9D980; border: 1px solid #283618;" />
                    <span asp-validation-for="Imagem" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group" style="padding-bottom: 25%">
                    <a asp-action="Index" class="btn btn-dark btn-lg btn-block border-0 botoes_perfil-usuario">
                        Voltar
                    </a>
                    <input type="submit" value="Salvar" class="btn btn-primary btn-lg btn-block border-0 botoes_perfil-usuario" />
                </div>
            </form>
        </div>
    </section>
    <section class="perfil_usuario-logo">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h3 class="texto_logo">Amplie sua presença online e alcance mais clientes.</h3>
                </div>
            </div>
        </div>
    </section>
</body>
<footer class="footer_ajustes" style="background-color: #283618; height:200px">
    <div class="container">
        <div class="row">
            <div class="col">
                <h3 class="titulo_footer">SIGA-NOS NAS REDES SOCIAIS</h3>
            </div>
            <div>
                <img class="mx-3" src="~/css/img/facebook.png" alt="facebook">
                <img class="mx-3" src="~/css/img/instagram.png" alt="instagram">
            </div>
        </div>
    </div>
    <div>
        <p class="rodape_footer"> © 2023 - Seleta - Idiomas - Política de Privacidade - Ajuda</p>
    </div>
</footer>


<script>function previewNovaImagem() {
        var input = document.getElementById('inputNovaImagem');
        var preview = document.getElementById('previewNovaImagem');

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                preview.src = e.target.result;
            };

            reader.readAsDataURL(input.files[0]);
        } else {
            preview.src = null;
        }
    }</script>
