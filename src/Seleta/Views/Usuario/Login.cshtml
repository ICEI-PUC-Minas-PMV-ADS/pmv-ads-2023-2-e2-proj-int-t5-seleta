@model Usuario
@{
    ViewData["Title"] = "Login Usuario";
}

<form method="post">
    <div class="row pb-2">
        <h3 class="display-3">@ViewData["Title"]</h3>
    </div>
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Senha"></label>
        <input asp-for="Senha" class="form-control">
    </div>
    <button type="submit" class="btn btn-success" style="width:150px">Entrar</button>
    
    <h5>Ainda não tem cadastro?</h5>
    <a asp-controller="Usuario" asp-action="Cadastro" class="btn btn-primary">
        Cadastre-se
    </a>
</form>
